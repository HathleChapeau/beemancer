  "multipart": [
    { "apply": { "model": "beemancer:block/honey_pipe_core" } },
    { "when": { "north": true }, "apply": { "model": "beemancer:block/honey_pipe_side", "y": 0 } },
    { "when": { "south": true }, "apply": { "model": "beemancer:block/honey_pipe_side", "y": 180 } },
    { "when": { "east": true }, "apply": { "model": "beemancer:block/honey_pipe_side", "y": 90 } },
    { "when": { "west": true }, "apply": { "model": "beemancer:block/honey_pipe_side", "y": 270 } },
    { "when": { "up": true }, "apply": { "model": "beemancer:block/honey_pipe_side", "x": 270 } },
    { "when": { "down": true }, "apply": { "model": "beemancer:block/honey_pipe_side", "x": 90 } }
  ]
}
